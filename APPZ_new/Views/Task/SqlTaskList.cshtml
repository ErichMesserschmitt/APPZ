@model IEnumerable<APPZ_new.SqlTaskModels.SqlTask>

@{
    ViewData["Title"] = "SqlTaskList";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Task List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Task" asp-action="CreateSqlTask" class="btn btn-primary">Create New Task</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Descriptions</th>
                    <th>Severity</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model)
                {
                    <tr>
                        <td width="25%">@task.Title</td>
                        <td width="25%">@task.Scope</td>
                        <td width="25%">@task.Severity</td>
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Task" asp-action="DeleteTaskNew" asp-route-Id="@task.Id" class="btn btn-danger mx-1">Delete</a>
                                <a asp-controller="Task" asp-action="LoadTaskNewToEdit" asp-route-Id="@task.Id" class="btn btn-warning mx-1">Edit</a>
                                <a asp-controller="Task" asp-action="OpenTask" asp-route-Id="@task.Id" class="btn btn-success mx-1">View</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet </p>
    }
</div>

    </div>
<br />
</div>
