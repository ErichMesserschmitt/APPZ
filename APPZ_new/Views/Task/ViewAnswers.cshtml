@model IEnumerable<APPZ_new.Models.Answer>

    @{
        ViewData["Title"] = "ViewAnswers";
    }
    <p>
         <a asp-action="OpenTask" asp-route-id="@ViewBag.TaskId" class="btn btn-primary mx-1">Back</a>
    </p>


    <h1>View Answers</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Question
                </th>
                <th>
                    Answer
                </th>
                <th>
                    Is Answer Correct
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Question.QuestionTest)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnswerText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsCorrect)
                    </td>
                </tr>
            }
        </tbody>
    </table>
