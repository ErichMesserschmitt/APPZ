@model APPZ_new.Models.Question

@{
    ViewData["Title"] = "CreateQuestion";
}

<h1>Add a question for task @ViewBag.TaskName</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateQuestion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QuestionTest" class="control-label">Enter Question Title</label>
                <input asp-for="QuestionTest" class="form-control" />
                <span asp-validation-for="QuestionTest" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="CreateQuestion" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

