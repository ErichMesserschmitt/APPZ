@model APPZ_new.Models.Task


<form method="post" asp-action="Update">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Task</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Title"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Severity"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="CategoryId"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="Title" class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="Description" class="form-control" />
                    </div>
                    <div class="form-group col-3">
                        <select asp-for="Severity" class="form-control">
                            <option value="">Please select</option>
                            <option value=0>Low</option>
                            <option value=1>Medium</option>
                            <option value=2>Hard</option>
                        </select>
                    </div>

                    <div class="form-group col-3">
                        <select asp-for="CategoryId" class="form-control">
                            <option value="">Please select</option>
                            @foreach (var category in ViewBag.Category)
                            {
                                <option value=@category.Id>@category.Title</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
