@model IEnumerable<APPZ_new.Models.Question>

@{
    ViewData["Title"] = "CreateTask";
}

<h1>@ViewBag.TaskName</h1>

<p>
    <a asp-action="CreateQuestion" asp-route-id='@ViewBag.TaskId'>Add question</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuestionTest)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionTest)
            </td>
            <td>
                <a asp-action="OpenQuestion" asp-route-id="@item.Id">Add Answers</a> |
                <a asp-action="ViewAnswers" asp-route-id="@item.Id">View Answers</a> |
                <a asp-action="DeleteQuestion" asp-route-id="@item.Id">Delete Question</a>
            </td>
        </tr>
}
    </tbody>
</table>
