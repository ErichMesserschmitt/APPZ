@model IEnumerable<APPZ_new.Models.Task>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-4">
            <h2 class="text-primary">Users Tasks List</h2>
        </div>
        <div class="col-4">
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                    Order by
                </button>
                <ul class="dropdown-menu">
                    <li><a asp-controller="UserTasks" asp-action="UsersTaskList" asp-route-id="0" >Low</a></li>
                    <li><a asp-controller="UserTasks" asp-action="UsersTaskList" asp-route-id="1" >Middle</a></li>
                    <li><a asp-controller="UserTasks" asp-action="UsersTaskList" asp-route-id="2">Hard</a></li>
                    <li><a asp-controller="UserTasks" asp-action="UsersTaskList" asp-route-id=null>All</a></li>
                </ul>
            </div>
            </div>
            <div class="col-4 text-right">
                <a asp-controller="UserTasks" asp-action="UsersPassedTaskList" class="btn btn-primary">Show Passed Test</a>
            </div>
        </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
            <tr>
                <th>Title</th>
                <th>Descriptions</th>
                <th>Severity</th>
                <th>Options</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td width="25%">@task.Title</td>
                    <td width="25%">@task.Description</td>
                    <td width="25%">@task.Severity</td>
                    <td width="30%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="UserTasks" asp-action="StartTask" asp-route-Id="@task.Id" class="btn btn-success mx-1">Pass test</a>
                              </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet </p>
    }
</div>
